            <div class="cbox cbox-list cbox-realtime">
                <div class="cbox-content">
                    <div class="tab-content">

                        <div id="top-viewed-day" class="anime-block-ul anif-block-chart tab-pane active">
                            <ul class="ulclear">
                                <% if(topMostViewsDay) { %>
                                    <% for(let i = 0; i < topMostViewsDay.length; i++) { %>
                                        <% if(i === 0) { %>
                                            <li class="item-top">
                                                <div class="film-number"><span><%= i + 1 %></span></div>
                                                <div class="film-poster item-qtip">
                                                    <img src="https://ik.imagekit.io/3q7pewvsl/imgur/tr:w-300,h-425/<%= topMostViewsDay[i].image %>"
                                                         class="film-poster-img"
                                                         loading="lazy"
                                                         alt="<%= topMostViewsDay[i].title %>">
                                                </div>
                                                <div class="film-detail">
                                                    <h3 class="film-name">
                                                        <a href="/watch/<%= topMostViewsDay[i].slug %>"
                                                           class="dynamic-name"><%= topMostViewsDay[i].title %></a>
                                                    </h3>
                                                    <div class="fd-infor">
                                                    <span class="fdi-item mr-2">
                                                        <i class="fas fa-eye mr-1"></i>
                                                        <%= topMostViewsDay[i].views %>
                                                    </span>
                                                    </div>
                                                </div>
                                                <div class="clearfix"></div>
                                            </li>
                                        <% } else { %>
                                            <li class="">
                                                <div class="film-number"><span><%= i + 1 %></span></div>
