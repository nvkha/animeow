<section class="block_area block_area-filter">
    <div class="block_area-content">
        <div class="sidebar-filter">
            <div class="item">
                <div data-toggle="dropdown" aria-haspopup="true" aria-expanded="false"
                     class="btn btn-sm btn-filter">
                    Thể Loại <span><span id="filter-genre-selected"></span><i
                                class="fas fa-angle-down ml-1"></i></span>
                </div>
                <div class="dropdown-menu dropdown-menu-native dropdown-menu-large dropdown-menu-filter">
                    <ul class="ulclear ul-filter ul-4col">
                        <% for(let i = 0; i < genres.length; i++) { %>
                            <li id="genre-<%= i + 1 %>">
                                <div class="acustom custom-control custom-checkbox">
                                    <input type="checkbox" class="custom-control-input checkbox-genre"
                                           value="<%= i + 1 %>"
                                           id="input-genre-<%= i + 1 %>">
                                    <label class="custom-control-label" for="input-genre-<%= i + 1 %>">
                                        <%= genres[i].name %>
                                    </label>
                                </div>
                            </li>
                        <% } %>
                    </ul>
                    <div class="clearfix"></div>
                </div>
            </div>
            <div class="item">
                <div data-toggle="dropdown" aria-haspopup="true" aria-expanded="false"
                     class="btn btn-sm btn-filter">
                    Mùa <span><span id="filter-season-selected"></span><i
                                class="fas fa-angle-down ml-1"></i></span>
                </div>
                <div class="dropdown-menu dropdown-menu-native dropdown-menu-filter">
                    <ul class="ulclear ul-filter">

                        <li id="season-1">
                            <div class="acustom custom-control custom-checkbox">
                                <input type="checkbox" value="spring"
                                       class="custom-control-input checkbox-season"
                                       id="input-season-1">
                                <label class="custom-control-label" for="input-season-1">Xuân</label>
                            </div>
                        </li>

                        <li id="season-2">
                            <div class="acustom custom-control custom-checkbox">
                                <input type="checkbox" value="summer"
                                       class="custom-control-input checkbox-season"
                                       id="input-season-2">
                                <label class="custom-control-label" for="input-season-2">Hạ</label>
                            </div>
                        </li>

                        <li id="season-3">
                            <div class="acustom custom-control custom-checkbox">
                                <input type="checkbox" value="fall" class="custom-control-input checkbox-season"
                                       id="input-season-3">
                                <label class="custom-control-label" for="input-season-3">Thu</label>
                            </div>
                        </li>

                        <li id="season-4">
                            <div class="acustom custom-control custom-checkbox">
                                <input type="checkbox" value="winter"
                                       class="custom-control-input checkbox-season"
                                       id="input-season-4">
                                <label class="custom-control-label" for="input-season-4">Đông</label>
                            </div>
                        </li>

                    </ul>
                    <div class="clearfix"></div>
                </div>
            </div>
            <div class="item">
                <div data-toggle="dropdown" aria-haspopup="true" aria-expanded="false"
                     class="btn btn-sm btn-filter">
                    Năm <span><span id="filter-year-selected"></span><i
                                class="fas fa-angle-down ml-1"></i></span>
                </div>
                <div class="dropdown-menu dropdown-menu-native dropdown-menu-medium dropdown-menu-filter">
                    <ul class="ulclear ul-3col ul-filter">
                        <% for(let i = 0; i < 12; i++) { %>
                            <% let year = new Date().getFullYear(); %>
                            <li>
                                <div class="acustom custom-control custom-checkbox">
                                    <input type="checkbox" class="custom-control-input checkbox-year"
                                           value="<%= year - i %>"
                                           id="input-year-<%= year - i %>">
                                    <label class="custom-control-label"
                                           for="input-year-<%= year - i %>"><%= year - i %></label>
                                </div>
                            </li>
                        <% } %>
                    </ul>
                    <div class="clearfix"></div>
                </div>
            </div>
            <div class="item">
                <div data-toggle="dropdown" aria-haspopup="true" aria-expanded="false"
                     class="btn btn-sm btn-filter">
                    Loại Anime <span><span id="filter-type-selected"></span><i
                                class="fas fa-angle-down ml-1"></i></span>
                </div>
                <div class="dropdown-menu dropdown-menu-native dropdown-menu-filter">
                    <ul class="ulclear ul-filter">

                        <li id="type-1">
                            <div class="acustom custom-control custom-checkbox">
                                <input type="checkbox" value="movie" class="custom-control-input checkbox-type"
                                       id="input-type-movie">
                                <label class="custom-control-label" for="input-type-movie">Movie</label>
                            </div>
                        </li>

                        <li id="type-2">
                            <div class="acustom custom-control custom-checkbox">
                                <input type="checkbox" value="tv" class="custom-control-input checkbox-type"
                                       id="input-type-tv">
                                <label class="custom-control-label" for="input-type-tv">TV Series</label>
                            </div>
                        </li>

                    </ul>
                    <div class="clearfix"></div>
                </div>
            </div>
            <div class="item">
                <div data-toggle="dropdown" aria-haspopup="true" aria-expanded="false"
                     class="btn btn-sm btn-filter">
                    Trạng Thái <span><span id="filter-status-selected"></span><i
                                class="fas fa-angle-down ml-1"></i></span>
                </div>
                <div class="dropdown-menu dropdown-menu-native dropdown-menu-filter">
                    <ul class="ulclear ul-filter">
                        <li id="status-all">
                            <div class="acustom custom-control custom-radio">
                                <input checked="" type="radio" value="all" class="custom-control-input"
                                       name="radio-status" id="input-status-all">
                                <label class="custom-control-label" for="input-status-all">Tất Cả</label>
                            </div>
                        </li>
                        <li id="status-1">
                            <div class="acustom custom-control custom-radio">
                                <input type="radio" value="finished" class="custom-control-input"
                                       name="radio-status"
                                       id="input-status-1">
                                <label class="custom-control-label" for="input-status-1">Hoàn Thành</label>
                            </div>
                        </li>

                        <li id="status-2">
                            <div class="acustom custom-control custom-radio">
                                <input type="radio" value="ongoing" class="custom-control-input"
                                       name="radio-status"
                                       id="input-status-2">
                                <label class="custom-control-label" for="input-status-2">Đang Ra</label>
                            </div>
                        </li>

                        <li id="status-3">
                            <div class="acustom custom-control custom-radio">
                                <input type="radio" value="upcoming" class="custom-control-input"
                                       name="radio-status"
                                       id="input-status-3">
                                <label class="custom-control-label" for="input-status-3">Sắp Chiếu</label>
                            </div>
                        </li>

                    </ul>
                    <div class="clearfix"></div>
                </div>
            </div>
            <div class="item">
                <div data-toggle="dropdown" aria-haspopup="true" aria-expanded="false"
                     class="btn btn-sm btn-filter">
                    Số Tập <span><span id="filter-episode-selected"></span><i
                                class="fas fa-angle-down ml-1"></i></span>
                </div>
                <div class="dropdown-menu dropdown-menu-native dropdown-menu-filter">
                    <ul class="ulclear ul-filter">
                        <li id="episodes-all">
                            <div class="acustom custom-control custom-radio">
                                <input checked="" type="radio" value="all" class="custom-control-input"
                                       name="radio-episodes" id="input-episodes-all">
                                <label class="custom-control-label" for="input-episodes-all">Tất Cả</label>
                            </div>
                        </li>
                        <li id="episodes-1">
                            <div class="acustom custom-control custom-radio">
                                <input type="radio" value="0-12" class="custom-control-input"
                                       name="radio-episodes"
                                       id="input-episodes-1">
                                <label class="custom-control-label" for="input-episodes-1">0 ~ 12</label>
                            </div>
                        </li>

                        <li id="episodes-2">
                            <div class="acustom custom-control custom-radio">
                                <input type="radio" value="12" class="custom-control-input"
                                       name="radio-episodes"
                                       id="input-episodes-2">
                                <label class="custom-control-label" for="input-episodes-2"> 12+ </label>
                            </div>
                        </li>

                    </ul>
                    <div class="clearfix"></div>
                </div>
            </div>
            <div class="item">
                <div data-toggle="dropdown" aria-haspopup="true" aria-expanded="false"
                     class="btn btn-sm btn-filter">Quốc Gia <span><i class="fas fa-angle-down ml-1"></i></span>
                </div>
            </div>
            <div class="item">
                <div data-toggle="dropdown" aria-haspopup="true" aria-expanded="false"
                     class="btn btn-sm btn-filter">
                    Sắp Xếp Theo <span><span id="filter-sort-selected"></span><i
                                class="fas fa-angle-down ml-1"></i></span>
                </div>
                <div class="dropdown-menu dropdown-menu-native dropdown-menu-filter">
                    <ul class="ulclear ul-filter">
                        <li>
                            <div class="acustom custom-control custom-radio">
                                <input checked="" type="radio" value="all" class="custom-control-input"
                                       name="radio-sort" id="input-sort-all">
                                <label class="custom-control-label" for="input-sort-default">Mặc Định</label>
                            </div>
                        </li>
                        <li>
                            <div class="acustom custom-control custom-radio">
                                <input type="radio" value="updated_at" class="custom-control-input"
                                       name="radio-sort"
                                       id="input-sort-recentlyUpdated">
                                <label class="custom-control-label" for="input-sort-recentlyUpdated">Mới Cập
                                    Nhật</label>
                            </div>
                        </li>
                        <li>
                            <div class="acustom custom-control custom-radio">
                                <input type="radio" value="a-z" class="custom-control-input" name="radio-sort"
                                       id="input-sort-recentlyAdded">
                                <label class="custom-control-label" for="input-sort-recentlyAdded">Tên:
                                    A-Z</label>
                            </div>
                        </li>
                    </ul>
                    <div class="clearfix"></div>
                </div>
            </div>
            <div class="clearfix"></div>
        </div>
        <div class="filter-bottom">
            <div id="sidebar-search">
                <div class="search-content">
                    <input type="text" class="form-control search-input" value="" name="filter-keyword"
                           placeholder="Từ khóa...">
                </div>
            </div>
            <div class="submit filter">
                <div class="btn btn-block btn-focus" id="btn-filter-submit"><i class="fas fa-filter mr-1"></i>Lọc
                    Anime
                </div>
            </div>
        </div>
    </div>
</section>