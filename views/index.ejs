<!DOCTYPE html>
<html lang="vi-VN">
<head>
    <title><%= title %></title>
    <%- include('./base/meta-data') %>
    <link rel="preconnect" href="https://www.googletagmanager.com">
    <link rel="preconnect" href="https://www.google-analytics.com">
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>

    <%- include('./base/common-css') %>

    <!-- Google Tag Manager -->
    <script>(function(w,d,s,l,i){w[l]=w[l]||[];w[l].push({'gtm.start':
                new Date().getTime(),event:'gtm.js'});var f=d.getElementsByTagName(s)[0],
            j=d.createElement(s),dl=l!='dataLayer'?'&l='+l:'';j.async=true;j.src=
            'https://www.googletagmanager.com/gtm.js?id='+i+dl;f.parentNode.insertBefore(j,f);
        })(window,document,'script','dataLayer','GTM-NZQ8M67');</script>
    <!-- End Google Tag Manager -->
</head>
<body>
<div id="wrapper">
    <!--Begin: Header-->
    <%- include('./base/header') %>
    <!--End: Header-->

    <!--Begin: Main-->
    <div id="main-wrapper">
        <div class="container">
            <!--Begin: main-content-->
            <div id="main-content">
                <% if(slideList) { %>
                    <div class="deslide-wrap">
                        <div id="slider" class="swiper">
                            <div class="swiper-wrapper">
                                <% slideList.value.forEach(function(slide) { %>
                                    <div class="swiper-slide">
                                        <div class="deslide-item">
                                            <div class="deslide-cover">
                                                <div class="deslide-cover-img">
                                                    <a href="/watch/<%= slide.slug %>">
                                                        <img class="film-poster-img"
                                                             src="https://ik.imagekit.io/3q7pewvsl/banner/tr:w-1000,h-400/<%= slide.image %>"
                                                             alt="<%= slide.title %>"
                                                             loading="lazy">
                                                    </a>
                                                </div>
                                            </div>
                                            <div class="deslide-item-content">
                                                <div class="desi-head-title">
                                                    <a href="/watch/<%= slide.slug %>"><%= slide.title %></a>
                                                </div>
                                                <div class="desi-description"><%= slide.description %></div>
                                                <div class="desi-buttons">
                                                    <a href="/watch/<%= slide.slug %>" class="btn">Xem Ngay</a>
                                                </div>
                                            </div>
                                            <div class="clearfix"></div>
                                        </div>
                                    </div>
                                <% }) %>
                            </div>
                            <div class="swiper-pagination"></div>
                            <div class="swiper-navigation">
                                <div class="swiper-button swiper-button-next"><i class="fas fa-chevron-right"></i></div>
                                <div class="swiper-button swiper-button-prev"><i class="fas fa-chevron-left"></i></div>
                            </div>
                            <div class="clearfix"></div>
                        </div>
                    </div>
                <% } %>

                <% if(alert && alert.value.length > 0) { %>
                    <!--Begin: text home-->
                    <div id="text-home">
                        <div class="alert alert-info"><%= alert.value %></div>
                        <!--/End: text home-->
                    </div>
                <% } %>

                    <div class="mb-3" style="margin: auto;">
                        <script async src="https://pagead2.googlesyndication.com/pagead/js/adsbygoogle.js?client=ca-pub-1409844988184491"
                                crossorigin="anonymous"></script>
                        <!-- 728x90 -->
                        <ins class="adsbygoogle"
                             style="display:inline-block;width:700px;height:100px"
                             data-ad-client="ca-pub-1409844988184491"
                             data-ad-slot="6926518072"></ins>
                        <script>
                            (adsbygoogle = window.adsbygoogle || []).push({});
                        </script>
                    </div>

                <section class="block_area block_area-anime none-bg">
                    <div class="block_area-header block_area-header-tabs">
                        <div class="float-left bah-heading mr-4">
                            <h2 class="cat-heading">Mới Cập Nhật</h2>
                        </div>
                        <div class="clearfix"></div>
                    </div>
                    <!--Begin: Section film list-->
                    <%- include('./base/anime-list') %>
                    <!--End: Section film list-->

                    <a href="/anime" class="btn btn-sm btn-block btn-showmore mb-3" style="">Xem Thêm..</a>

                    <div class="block_area-header block_area-header-tabs">
                        <div class="float-left bah-heading mr-4">
                            <h2 class="cat-heading">Hoạt Hình Trung Quốc</h2>
                        </div>
                        <div class="clearfix"></div>
                    </div>
                    <!--Begin: Section film list-->
                    <%- include('./base/anime-list-chinese') %>
                    <!--End: Section film list-->

                    <a href="/the-loai/hoat-hinh-trung-quoc" class="btn btn-sm btn-block btn-showmore mb-3" style="">Xem Thêm..</a>
                </section>
                <div class="clearfix"></div>
            </div>
            <!--/End: main-content-->

            <!--Start: main-sidebar-->
            <div id="main-sidebar">
                <%- include('./base/top-views-sidebar') %>
            </div>
            <!--/End: main-sidebar-->
            <div class="clearfix"></div>
        </div>
    </div>
    <!--End: Main-->

    <!--Start: Footer-->
    <%- include('./base/footer') %>
    <!--End: Footer-->
</div>

<script type="text/javascript" src="https://statics.animeow.pro/js/jquery.min.js"></script>
<script type="text/javascript" src="https://statics.animeow.pro/js/bootstrap.min.js"></script>
<script src="https://cdn.jsdelivr.net/npm/swiper@9.1.1/swiper-bundle.min.js"></script>
<script type="text/javascript" src="https://statics.animeow.pro/js/swiper-slide.js"></script>
<script type="text/javascript" src="/js/main.js"></script>
<!-- Google Tag Manager (noscript) -->
<noscript>
    <iframe src="https://www.googletagmanager.com/ns.html?id=GTM-NZQ8M67"
            height="0" width="0" style="display:none;visibility:hidden"></iframe>
</noscript>
<!-- End Google Tag Manager (noscript) -->
</body>
</html>