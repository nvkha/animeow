<!DOCTYPE html>
<html lang="vi-VN">
<head>
    <title><%= title %></title>
    <%- include('./base/meta-data') %>
    <%- include('./base/common-css') %>
    <%- include('./base/google-tag') %>
</head>
<body>
<div id="wrapper">
    <!--Begin: Header-->
    <%- include('./base/header') %>
    <!--End: Header-->

    <div class="prebreadcrumb">
        <div class="container">
            <nav aria-label="breadcrumb">
                <ol class="breadcrumb">
                    <li class="breadcrumb-item"><a href="/">Trang chủ</a></li>
                    <li class="breadcrumb-item active" aria-current="page">
                        Kết quả tìm kiếm cho: <%= keyword %>
                    </li>
                </ol>
            </nav>
        </div>
    </div>

    <!--Begin: Main-->
    <div id="main-wrapper">
        <div class="container">
            <!--Begin: main-content-->
            <div id="main-content">
                <!--Begin: Section filter-->
                <%- include('./base/filter') %>
                <!--End: Section filter-->

                <!--Begin: Section film list-->
                <%- include('./base/anime-list') %>
                <!--End: Section film list-->
                <div class="clearfix"></div>
            </div>
            <!--/End: main-content-->

            <!--Start: main-sidebar-->
            <%- include('./base/top-views-sidebar') %>
            <!--/End: main-sidebar-->
            <div class="clearfix"></div>
        </div>
    </div>
    <!--End: Main-->

    <!--Start: Footer-->
    <%- include('./base/footer') %>
    <!--End: Footer-->
</div>

<%- include('./base/common-js') %>
</body>
</html>