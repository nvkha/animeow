                         data-ad-slot="6926518072"></ins>
                    <script>
                        (adsbygoogle = window.adsbygoogle || []).push({});
                    </script>
                </div>

                <section class="block_area block_area-anime none-bg">
                    <!--Begin: Section film list-->
                    <%- include('./base/anime-list') %>
                    <!--End: Section film list-->
                </section>
                <div class="clearfix"></div>
            </div>
            <!--/End: main-content-->

            <!--Start: main-sidebar-->
            <div id="main-sidebar">
                <%- include('./base/top-views-sidebar') %>
            </div>
            <!--/End: main-sidebar-->
            <div class="clearfix"></div>
        </div>
    </div>
    <!--End: Main-->

    <!--Start: Footer-->
    <%- include('./base/footer') %>
    <!--End: Footer-->
</div>

<%- include('./base/common-js') %>
</body>
</html>