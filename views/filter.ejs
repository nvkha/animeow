<!DOCTYPE html>
<html lang="vi-VN">
<head>
    <title><%= title %></title>
    <%- include('./base/meta-data') %>
    <link rel="preconnect" href="https://www.googletagmanager.com">
    <link rel="preconnect" href="https://www.google-analytics.com">
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>

    <%- include('./base/common-css') %>

    <!-- Google Tag Manager -->
    <script>(function(w,d,s,l,i){w[l]=w[l]||[];w[l].push({'gtm.start':
                new Date().getTime(),event:'gtm.js'});var f=d.getElementsByTagName(s)[0],
            j=d.createElement(s),dl=l!='dataLayer'?'&l='+l:'';j.async=true;j.src=
            'https://www.googletagmanager.com/gtm.js?id='+i+dl;f.parentNode.insertBefore(j,f);
        })(window,document,'script','dataLayer','GTM-NZQ8M67');</script>
    <!-- End Google Tag Manager -->
</head>
<body>
<div id="wrapper">
    <!--Begin: Header-->
    <%- include('./base/header') %>
    <!--End: Header-->

    <div class="prebreadcrumb">
        <div class="container">
            <nav aria-label="breadcrumb">
                <ol class="breadcrumb">
                    <li class="breadcrumb-item"><a href="/" title="Home">Trang chủ</a></li>
                    <li class="breadcrumb-item active" aria-current="page">Lọc Anime</li>
                </ol>
            </nav>
        </div>
    </div>

    <!--Begin: Main-->
    <div id="main-wrapper">
        <div class="container">
            <!--Begin: main-content-->
            <div id="main-content">
                <!--Begin: Section filter-->
                <%- include('./base/filter') %>
                <!--End: Section filter-->

                <script async src="https://pagead2.googlesyndication.com/pagead/js/adsbygoogle.js?client=ca-pub-1409844988184491"
                        crossorigin="anonymous"></script>
                <!-- Horizontal -->
                <ins class="adsbygoogle"
                     style="display:block"
                     data-ad-client="ca-pub-1409844988184491"
                     data-ad-slot="7180377944"
                     data-ad-format="auto"
                     data-full-width-responsive="true"></ins>
                <script>
                    (adsbygoogle = window.adsbygoogle || []).push({});
                </script>

                <section class="block_area block_area-anime none-bg">
                    <!--Begin: Section film list-->
                    <%- include('./base/anime-list') %>
                    <!--End: Section film list-->
                </section>

                <% if(totalPages > 1) { %>
                    <!--Begin: Pagination-->
                    <div class="anime-pagination">
                        <div class="ap_-nav">
                            <div class="ap__-btn ap__-btn-prev">
                                <a href="<% if(/page=\d+/.test(path)) { %><%= path.replace(/page=\S+/, "page=" + prevPage) %><% } else { %><% if(path.endsWith('?')) { %><%= path %>page=<%= prevPage %><% } else { %><%= path %>&page=<%= prevPage %><% } %><% } %>"
                                   class="btn btn-sm btn-focus more-padding <% if(!prevPage) { %>disabled<% } %>">
                                    <i class="fas fa-angle-left"></i>
                                    Previous
                                </a>
                            </div>
                            <div class="ap__-input">
                                <div class="btn btn-sm btn-blank">page</div>
                                <input class="form-control form-control-dark input-page" value="<%= currentPage %>">
                                <button type="button" class="btn btn-sm btn-focus btn-go-page">go</button>
                                <div class="btn btn-sm btn-blank">of <%= totalPages %></div>
                            </div>
                            <div class="ap__-btn ap__-btn-next">
                                <a href="<% if(/page=\d+/.test(path)) { %><%= path.replace(/page=\S+/, "page=" + nextPage) %><% } else { %><% if(path.endsWith('?')) { %><%= path %>page=<%= nextPage %><% } else { %><%= path %>&page=<%= nextPage %><% } %><% } %>"
                                   class="btn btn-sm btn-focus more-padding <% if(!nextPage) { %>disabled<% } %>">
                                    Next <i class="fas fa-angle-right"></i>
                                </a>
                            </div>
                        </div>
                    </div>
                    <!--End: Pagination-->
                <% } %>
                <div class="clearfix"></div>
            </div>
            <!--/End: main-content-->

            <!--Start: main-sidebar-->
            <div id="main-sidebar">
                <%- include('./base/top-views-sidebar') %>
            </div>
            <!--/End: main-sidebar-->
            <div class="clearfix"></div>
        </div>
    </div>
    <!--End: Main-->

    <!--Start: Footer-->
    <%- include('./base/footer') %>
    <!--End: Footer-->
</div>

<%- include('./base/common-js') %>
</body>
</html>